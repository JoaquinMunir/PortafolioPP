@page "/conversor"
@rendermode InteractiveServer

<PageTitle>Conversor de Divisas</PageTitle>

<h1>Conversor de Divisas</h1>

<div>
    <label for="cantidad">Cantidad en MXN:</label>
    <input type="number" id="cantidad" @bind="Cantidad" class="form-control" />

    <button class="btn btn-primary mt-3" @onclick="Convertir">Convertir</button>
</div>

<div class="mt-3">
    <label for="resultadoUSD">USD (Dolar Estadounidense):</label>
    <div class="input-group">
        <span class="input-group-text">$</span>
        <input type="text" id="resultadoUSD" class="form-control" value="@ResultadoUSD" disabled />
    </div>

    <label for="resultadoEUR" class="mt-2">EUR (Euro):</label>
    <div class="input-group">
        <span class="input-group-text">€</span>
        <input type="text" id="resultadoEUR" class="form-control" value="@ResultadoEUR" disabled />
    </div>

    <label for="resultadoGBP" class="mt-2">GBP (Libra Esterlina):</label>
    <div class="input-group">
        <span class="input-group-text">£</span>
        <input type="text" id="resultadoGBP" class="form-control" value="@ResultadoGBP" disabled />
    </div>
</div>

@code {
    private decimal Cantidad { get; set; } = 0;
    private string ResultadoUSD { get; set; } = "0.00";
    private string ResultadoEUR { get; set; } = "0.00";
    private string ResultadoGBP { get; set; } = "0.00";

    private decimal TasaUSD = 0.04962M;
    private decimal TasaEUR = 0.04579M;
    private decimal TasaGBP = 0.03833M;

    private void Convertir()
    {
        if (Cantidad > 0)
        {
            ResultadoUSD = (Cantidad * TasaUSD).ToString("N2");
            ResultadoEUR = (Cantidad * TasaEUR).ToString("N2");
            ResultadoGBP = (Cantidad * TasaGBP).ToString("N2");
        }
        else
        {
            ResultadoUSD = "0.00";
            ResultadoEUR = "0.00";
            ResultadoGBP = "0.00";
        }
    }
}
